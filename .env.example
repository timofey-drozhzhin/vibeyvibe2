# ======================
# vibeyvibe Environment
# ======================

# App
NODE_ENV=development

# Database (local: file:../../tmp/local.db relative to apps/api, production: libsql://your-db.bunny.net)
DATABASE_URL=file:../../tmp/local.db
DATABASE_AUTH_TOKEN=

# Auth
BETTER_AUTH_SECRET=change-me-to-a-random-string-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3001
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Storage (local or bunny)
STORAGE_PROVIDER=local
# Local storage path (relative to api root)
STORAGE_LOCAL_PATH=../../tmp/storage
# Bunny storage (production)
BUNNY_STORAGE_ZONE=
BUNNY_STORAGE_PASSWORD=
BUNNY_STORAGE_REGION=storage.bunnycdn.com
BUNNY_CDN_HOSTNAME=
BUNNY_CDN_SECURITY_KEY=

# Dev Auth Bypass (only works when NODE_ENV !== "production")
DEV_AUTH_BYPASS=true

# Frontend
VITE_API_URL=http://localhost:3001
