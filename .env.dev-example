# ======================
# vibeyvibe Environment (Development)
# ======================

# App
NODE_ENV=development

# Database (SQLite file, relative to apps/api/)
DATABASE_URL=file:../../tmp/local.db
DATABASE_AUTH_TOKEN=

# Auth
BETTER_AUTH_SECRET=change-me-to-a-random-string-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3001
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=../../tmp/storage
BUNNY_STORAGE_ZONE=
BUNNY_STORAGE_PASSWORD=
BUNNY_STORAGE_REGION=
BUNNY_CDN_HOSTNAME=
BUNNY_CDN_SECURITY_KEY=

# Dev Auth Bypass (only works when NODE_ENV !== "production")
DEV_AUTH_BYPASS=true

# Frontend
FRONTEND_URL=http://localhost:5173

# AI / OpenRouter (optional, enables vibes generation)
OPENROUTER_API_KEY=
VIBES_GENERATOR_OPENROUTER_MODEL=
VIBES_SUNO_PROMPT_OPENROUTER_MODEL=
